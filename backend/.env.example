# Twitter Credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4 # Use gpt-4 for better crypto news understanding, gpt-3.5-turbo is also acceptable
OPENAI_TEMPERATURE=0.7 # 0.4-0.7 recommended for news (lower = more factual, higher = more creative)

# Target Twitter Accounts to scrape crypto news from
# Separate multiple accounts with commas
TARGET_ACCOUNTS=cz_binance,SBF_FTX,VitalikButerin,elonmusk,aantonop,CryptoHayes,saylor,BitcoinMagazine,coindesk,APompliano,CoinMarketCap

# Delays between tweets (milliseconds)
MIN_DELAY=300000  # 5 minutes
MAX_DELAY=900000  # 15 minutes

# Number of tweets to fetch per account
TWEETS_PER_ACCOUNT=10 